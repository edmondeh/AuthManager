@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

@using AuthManager.Web.Views.Shared.Components.Error;

<div class="register-box">
    <div class="register-logo">
        <a href="/"><b>Auth Manager</b></a>
    </div>
    <div>
        @(await Component.InvokeAsync<ErrorViewComponent>())
    </div>
    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new membership</p>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="POST">
                <div class="input-group">
                    <input asp-for="Input.FirstName" class="form-control" placeholder="First name" required autocomplete="first_name" autofocus>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="input-group mt-3">
                    <input asp-for="Input.LastName" class="form-control" placeholder="Last name" required>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="input-group mt-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-group mt-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" required autocomplete="new-password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-group mt-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Retype password" required autocomplete="new-password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                @*<div class="t-c mt-3">
                        <div class="g-recaptcha mb-3" data-sitekey="{env('GOOGLE_RECAPTCHA_KEY')}}">
                        </div>
                    </div>*@
                <div class="row mt-3">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="agreeTerms" name="terms" value="agree" required>
                            <label for="agreeTerms">
                                I agree to the <a href="#">terms</a>
                            </label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </div>
                </div>
            </form>

            <div class="social-auth-links text-center">

            </div>

            <a asp-area="Identity" asp-page="/Account/Login" class="text-center mt-3">I already have a membership</a>
        </div>
    </div>
</div>

@section Scripts {
    @*<partial name="_ValidationScriptsPartial" />*@
}